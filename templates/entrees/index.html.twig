{% extends 'base.html.twig' %}

{% block title %}Entrees index{% endblock %}

{% block body %}
<div class="page entrees">
    <h1>Entrees index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entree in entrees %}
            <tr>
                <td>{{ entree.id }}</td>
                <td>{{ entree.nom }}</td>
                <td>{{ entree.description }}</td>
                <td>{{ entree.prix }} €</td>
                <td>
                    <a href="{{ path('app_entrees_show', {'id': entree.id}) }}" class="btn btn-light">Afficher</a>
                    <a href="{{ path('app_entrees_edit', {'id': entree.id}) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entrees_new') }}" class="btn btn-secondary">Nouvelle entrée</a>
</div>
{% endblock %}
