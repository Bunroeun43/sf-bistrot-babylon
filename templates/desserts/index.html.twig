{% extends 'base.html.twig' %}

{% block title %}Desserts index{% endblock %}

{% block body %}
<div class="page desserts">
    <h1>Desserts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dessert in desserts %}
            <tr>
                <td>{{ dessert.id }}</td>
                <td>{{ dessert.nom }}</td>
                <td>{{ dessert.description }}</td>
                <td>{{ dessert.prix }}</td>
                <td>
                    <a href="{{ path('app_desserts_show', {'id': dessert.id}) }}" class="btn btn-light">Afficher</a>
                    <a href="{{ path('app_desserts_edit', {'id': dessert.id}) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_desserts_new') }}">Create new</a>
</div>
{% endblock %}
